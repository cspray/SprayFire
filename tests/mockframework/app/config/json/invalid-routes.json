{
    "sprayfire-docs": "Please see SprayFire Wiki on the Routing configuration file",
    "defaults": {
        "notice": "we don't have a controller or action key here"
    },
    "routes": {
        "/": {
            "controller": "%default_controller",
            "action": "%default_action%"
        },
        "DC-DA-1": {
            "controller": "posts"
        },
        "songs-DA-*": {
            "controller": "music"
        },
        "posts-DA-*": {
            "controller": "articles",
            "action": "view"
        },
        "dogs-train-2": {
            "controller": "dogs_train_two",
            "action": "train_two"
        },
        "dogs-train-*": {
            "action": "train_all"
        },
        "dogs-DA-*": {
            "controller": "dogs_default_action",
            "action": "%default_action%"
        }
    }
}